<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.salary.admin.mapper.ext.SysUserExtMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.salary.admin.model.entity.sys.SysUser">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="nickname" property="nickname" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
        <result column="sex" property="sex" />
        <result column="avatar" property="avatar" />
        <result column="status" property="status" />
        <result column="last_login_time" property="lastLoginTime" />
        <result column="delete_flag" property="deleteFlag" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, nickname, email, phone,sex,avatar, status, last_login_time, delete_flag, create_by, create_time, update_by, update_time
    </sql>
    <!-- 根据用户名查询系统用户
        使用 resultMap 确保字段映射（如 last_login_time）正确
        增加 delete_flag=0 确保逻辑删除的数据不会被查出
    -->
    <select id="selectUserByUsername" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM sys_user
        WHERE username = #{username}
        AND delete_flag = 0
        LIMIT 1
    </select>

    <!-- 物理删除：直接删除记录 -->
    <delete id="physicalDeleteUserById">
        DELETE FROM sys_user WHERE id = #{id}

    </delete>

    <!-- 批量物理删除 -->
    <delete id="batchPhysicalDeleteUserByIds">
        DELETE FROM sys_user
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>


    <!-- 分页查询用户列表 -->
    <select id="selectUserListByPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM sys_user
        <where>
            delete_flag = 0
            <if test="reqDTO.username != null and reqDTO.username != ''">
                AND username LIKE CONCAT('%', #{reqDTO.username}, '%')
            </if>
            <if test="reqDTO.phone != null and reqDTO.phone != ''">
                AND phone = #{reqDTO.phone}
            </if>
            <if test="reqDTO.status != null">
                AND status = #{reqDTO.status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

</mapper>
